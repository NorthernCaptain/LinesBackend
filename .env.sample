# Copy this file to .env.development and fill in the values

# =============================================================================
# Server Configuration
# =============================================================================

# Number of cluster workers (defaults to number of CPUs)
CLUSTER_WORKERS=1

# Log level: DEBUG, INFO, WARN, ERROR
LOG_LEVEL=DEBUG

# =============================================================================
# Lines Database (main app)
# =============================================================================

db_host=localhost
db_database=lines
db_user=lines_user
db_password=your_password_here

# =============================================================================
# OLDS Database
# =============================================================================

db_olds_database=olds
db_olds_user=olds_user
db_olds_password=your_password_here

# =============================================================================
# Auth Database
# =============================================================================

db_auth_database=auth
db_auth_user=auth_user
db_auth_password=your_password_here

# =============================================================================
# Naval Clash Database
# =============================================================================

# Naval Clash specific settings (fallback to db_host if not set)
NC_DB_HOST=localhost
NC_DB_NAME=navalclash
NC_DB_USER=navalclash_user
NC_DB_PASSWORD=your_password_here

# Alternative: use shared credentials with db_nc_* prefix
# db_nc_user=navalclash_user
# db_nc_password=your_password_here
